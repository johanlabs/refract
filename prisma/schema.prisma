generator client {
  provider = "prisma-client-js"
  output = "./generated/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  
  url      = env("DATABASE_URL")
}

// @source: src\packages\user\user.prisma
model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

// @source: src\packages\post\post.prisma
model Post {
  id     Int    @id @default(autoincrement())
  title  String
  userId Int
}
